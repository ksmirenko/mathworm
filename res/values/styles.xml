<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ShortNumberInput">
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/hint_number</item>
        <item name="android:minWidth">50sp</item>
        <item name="android:maxWidth">200sp</item>
    </style>
    
    <style name="SmallButton">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
    </style>
    
    <style name="MediumButton">
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
    </style>
    
    <style name="SingeLineOutput">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <color name="separator">#ff31b6e7</color>
    
</resources>
